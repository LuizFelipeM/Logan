{
  "name": "logan",
  "version": "1.0.0",
  "description": "Sistema de controle de uma instituição de ensino",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p .",
    "start": "node --inspect=5858 -r ts-node/register -r dotenv/config ./src/server.ts",
    "dev": "nodemon",
    "test": "jest",
    "knex:make": "npx knex --knexfile ./src/dataAccess/database/knex/knexfile.ts migrate:make -x ts",
    "knex:latest": "npx knex --knexfile ./src/dataAccess/database/knex/knexfile.ts migrate:latest",
    "knex:rollback": "npx knex --knexfile ./src/dataAccess/database/knex/knexfile.ts migrate:rollback"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuizFelipeM/Logan.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LuizFelipeM/Logan/issues"
  },
  "homepage": "https://github.com/LuizFelipeM/Logan#readme",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express-graphql": "^0.9.0",
    "@types/glob": "^7.1.3",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "^26.0.4",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.158",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "graphql-tag": "^2.10.4",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "apollo-server-express": "^2.16.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "glob": "^7.1.6",
    "graphql": "^15.3.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tools": "^6.0.16",
    "knex": "^0.21.2",
    "lodash": "^4.17.19",
    "objection": "^2.2.1",
    "pg": "^8.3.0",
    "uuid": "^8.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "/*.test.ts",
      "/*.spec.ts",
      ".git",
      "node_modules",
      "migrations",
      "seeds"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
